  &__container
    position relative
    z-index 1
    padding 20px 0 1px
    text-align: center
    +above($breakpoints.sm)
      padding 40px 0
    +above($breakpoints.md)
      padding 70px 0
    +above($breakpoints.xxl)
      padding 110px 0

  &__icon
    position absolute
    z-index -1
    width: 45px;
    height: auto;
    top: 27px;
    right: -43px;
    +above($breakpoints.sm)
      width: 65px;
      top: 48px;
      right: -29px;
    +above($breakpoints.md)
      width: 100px;
      top: 75px;
      right: -55px;
    +above($breakpoints.xxl)
      width 144px
      top: 111px
      right: -133px

  &__title
    padding 0 0 15px 0
    +above($breakpoints.sm)
      padding 0 0 30px 0
    +above($breakpoints.md)
      padding 0 0 40px 0
    +above($breakpoints.xxl)
      padding 0 0 60px 0

  &__cards
    +above($breakpoints.sm)
      display: flex
      justify-content center
      gap: 30px
    +above($breakpoints.md)
      gap: 60px
    +above($breakpoints.xxl)
      gap: 90px

  &__card
    width 280px !important
    border-radius: 8px
    background-color #DF5595
    color: #fff
    border: 4px solid #E17BAA
    display: flex
    flex-direction: column
    align-items: center
    padding 10px 10px 25px
    +above($breakpoints.sm)
      border-radius: 10px
      border: 6px solid #E17BAA
      width: 300px !important;
      padding 20px 10px 40px
    +above($breakpoints.md)
      border-radius: 15px
      border: 8px solid #E17BAA
      width: 380px !important;
      padding 30px 10px 50px
    +above($breakpoints.xxl)
      border-radius: 20px
      border: 10px solid #E17BAA
      width 480px !important
      height: 575px
      padding: 43px 10px 76px;

  &__card-img
    width 150px
    height: auto
    margin-bottom 10px
    +above($breakpoints.sm)
      width 160px
      margin-bottom 20px
    +above($breakpoints.md)
      width 200px
      margin-bottom 25px
    +above($breakpoints.xxl)
      margin-bottom 30px
      width 227px

  &__card-title
    font-size: 16px
    line-height: 120%
    +above($breakpoints.sm)
      font-size: 20px
    +above($breakpoints.md)
      font-size: 24px
    +above($breakpoints.xxl)
      font-size: 28px

  &__card-text
    padding 10px 0
    +above($breakpoints.sm)
      padding 14px 0
    +above($breakpoints.md)
      padding 17px 0
    +above($breakpoints.xxl)
      padding 20px 0

  &__btn
    width 200px !important
    +above($breakpoints.sm)
      width 200px !important
    +above($breakpoints.md)
      width 240px !important
    +above($breakpoints.xxl)
      width 288px !important
