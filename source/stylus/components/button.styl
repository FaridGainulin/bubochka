.btn
  height: 40px
  width 100%
  user-select: none
  position: relative
  display: flex;
  justify-content: center
  align-items: center
  overflow: hidden
  color: #0E556A
  border-radius: 30px
  box-shadow: inset 0 -2px 0 0 rgba(0, 0, 0, 0.25);
  background: #3fcbf5;
  text-transform: uppercase
  font-family: 'Comfortaa-Bold'
  font-weight: 700
  font-size: 14px
  line-height: 120%
  transition transform 0.5s, top 0.8s
  +above($breakpoints.sm)
    font-size: 14px;
    height: 45px;
  +above($breakpoints.md)
    font-size: 16px;
    height: 50px;
  +above($breakpoints.xxl)
    font-size: 18px;
    height: 56px

  &:hover
    transform: scale(1.02)

  &:active
    top: 3px

  &::before
    content: ""
    position: absolute
    top: 0;
    height: 100%;
    width: 36px;
    transform: skewX(-45deg)
    left: -150%
    pointer-events: none
    background: linear-gradient(90deg, rgba(255, 255, 255, 0.1), rgba(255, 255, 255, 0.4));
    animation: flareAnimation 4s infinite ease-in;
    vendord = official
    @keyframes flareAnimation
      0%
          left: -150%
      100% 
          left: 250%

  &--call-me
    cursor pointer
    text-transform: unset
    font-size: 9px
    height: 27px
    width 118px
    +above($breakpoints.sm)
      margin-left 6px
      font-size: 10px;
      height: 28px;
      width 130px
    +above($breakpoints.md)
      margin-left 8px
      font-size: 11px;
      height: 32px;
      width 140px
    +above($breakpoints.xxl)
      margin-left 10px
      font-size: 12px;
      height: 36px
      width 159px
