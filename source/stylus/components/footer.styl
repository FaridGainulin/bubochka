.footer

  &__container
    display: flex
    align-items: center
    flex-direction: column
    gap: 10px
    padding 20px 0
    +above($breakpoints.sm)
      flex-direction: row
      justify-content space-between
      padding 15px 0
    +above($breakpoints.md)
      padding 20px 0
    +above($breakpoints.xxl)
      padding 30px 0

  &__brand
    display: none
    +above($breakpoints.sm)
      flex-basis: 35%
      display: flex
      flex-direction: column
      gap: 5px

  &__logo
    width 100px
    height: auto
    +above($breakpoints.sm)
      width 140px
    +above($breakpoints.md)
      width 180px
    +above($breakpoints.xxl)
      width 204px

  &__privacy,
  &__privacy-mobile
    cursor pointer
    text-decoration: underline

  &__privacy-mobile
    +above($breakpoints.sm)
      display: none

  &__connection
    +above($breakpoints.sm)
      display: flex
      justify-content flex-end
      flex-basis: 35%
