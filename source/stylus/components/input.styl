  transition border-color 0.3s, box-shadow 0.3s, border 0.3s, background 0.3s
  &:hover
    border 1px solid #3FCBF5
  &:focus
    color: #0E556A
    caret-color: #CB1787
    border 1px solid #3FCBF5
    box-shadow: 3px 3px 20px 0px #3FCBF5
    background: #fff
    &::placeholder
      color: #A4A4A4
  &::placeholder
    color: #A4A4A4
  +above($breakpoints.sm)
    padding: 0 15px;
    font-size: 14px;
    height: 45px
  +above($breakpoints.md)
    padding: 0 17px;
    font-size: 16px;
    height: 50px
  +above($breakpoints.xxl)
    padding: 0 20px;
    font-size: 18px;
    height: 56px
  &.error
    border 1px solid $color-error
    color: $color-error
    caret-color: $color-error
    box-shadow: 0px 0px 22px 0px $color-error
    background: #fff
    &::placeholder
      color: $color-error
    &::-ms-input-placeholder
      color: $color-error
    animation: shake 0.6s;
    @keyframes shake
      10%, 90%
        transform: translate3d(-1px, 0, 0)
      20%, 80%
        transform: translate3d(2px, 0, 0)
      30%, 50%, 70%
        transform: translate3d(-4px, 0, 0)
      40%, 60%
        transform: translate3d(4px, 0, 0)

  &--textarea
    outline none
    border: none
    padding: 10px 10px 10px 20px
    resize: none
    height: 60px
    width 280px
    border-radius: 10px
    +above($breakpoints.sm)
      width 100%
      padding: 15px 10px 10px 15px
      height: 70px
    +above($breakpoints.md)
      border-radius: 15px
      padding: 17px 10px 10px 17px
      height: 80px;
    +above($breakpoints.xxl)
      border-radius: 20px
      padding: 20px 10px 10px 20px
      height: 100px

