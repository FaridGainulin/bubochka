.reasons-section
  // background-image: url('../images/reasons-section-bg.jpg')
  // background-repeat: no-repeat
  // background-position: center
  // background-size: cover
  // background-color $color-brown

  &__container
    position relative
    z-index 1
    padding 20px 0 5px
    +above($breakpoints.sm)
      padding 40px 0
    +above($breakpoints.md)
      padding 70px 0
    +above($breakpoints.xxl)
      padding 110px 0

  &__box
    display: flex
    flex-direction: column
    align-items: center
    gap: 15px
    +above($breakpoints.sm)
      flex-direction: row
      align-items: flex-start
      justify-content space-between

  &__title
    text-align: center
    width 100%
    +above($breakpoints.sm)
      text-align: start

  &__cards
    +above($breakpoints.sm)
      display: flex
      flex-direction: column
      gap: 10px
    +above($breakpoints.md)
      gap: 15px
    +above($breakpoints.xxl)
      gap: 20px

  &__card
    width 280px !important
    height: 170px
    background-color #fff
    padding 15px 10px
    border-radius: 10px
    +above($breakpoints.sm)
      border-radius: 15px;
      width: 360px !important;
      height: 155px;
      padding: 20px 20px 25px 20px;
    +above($breakpoints.md)
      border-radius: 20px;
      width: 480px !important;
      height: 195px;
      padding: 25px 25px 30px 25px;
    +above($breakpoints.xxl)
      width 580px !important
      height: 228px
      padding 30px 30px 38px 30px

  &__card-header
    display: flex
    align-items: center
    justify-content space-between
    margin-bottom 7px
    +above($breakpoints.sm)
      margin-bottom 14px
    +above($breakpoints.md)
      margin-bottom 17px
    +above($breakpoints.xxl)
      margin-bottom 20px

  &__card-title
    font-size: 15px
    line-height: 120%
    +above($breakpoints.sm)
      font-size: 17px
    +above($breakpoints.md)
      font-size: 21px
    +above($breakpoints.xxl)
      font-size: 24px

  &__card-num
    display: flex
    align-items: center
    justify-content center
    background-color #98E8FF
    color: #fff
    border-radius: 5px
    font-size: 16px
    line-height: 120%
    width 25px
    height: 25px
    +above($breakpoints.sm)
      font-size: 20px
      width 30px
      height: 30px
    +above($breakpoints.md)
      font-size: 24px
      width 35px
      height: 35px
    +above($breakpoints.xxl)
      font-size: 28px
      width 40px
      height: 40px

  &__card-text
    font-size: 13px
    line-height: 120%
    text-align: center
    +above($breakpoints.sm)
      text-align: start
      font-size: 11px
    +above($breakpoints.md)
      font-size: 15px
    +above($breakpoints.xxl)
      font-size: 18px

  &__bottom
    width 100%
    position relative
    color: #fff
    background-color #2F3595
    border-radius: 10px
    text-align: center
    padding 15px 10px
    +above($breakpoints.sm)
      width 680px
      margin 30px auto 0
      border-radius: 15px
      padding 25px 10px
    +above($breakpoints.md)
      width 840px
      margin 50px auto 0
      border-radius: 20px
      padding 35px 10px
    +above($breakpoints.xxl)
      margin 72px auto 0
      padding 46px 10px
      width 1081px
      height: 368px

  &__bottom-img-left
    position: absolute
    width: 20px;
    height: auto;
    top: 8px;
    left: 5px;
    +above($breakpoints.sm)
      width: 50px;
      top: 17px;
      left: 20px;
    +above($breakpoints.md)
      width: 60px;
      top: 25px;
      left: 30px;
    +above($breakpoints.xxl)
      width 76px
      top: 33px
      left: 47px

  &__bottom-img-right
    position: absolute
    width: 20px;
    height: auto;
    bottom: 238px;
    right: 10px;
    +above($breakpoints.sm)
      width: 50px;
      bottom: 27px;
      right: 15px;
    +above($breakpoints.md)
      width 60px
      bottom: 30px
      right: 20px
    +above($breakpoints.xxl)
      width 70px
      bottom: 48px
      right: 25px

  &__form
    width 100%
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    margin 10px 0 0
    +above($breakpoints.sm)
      margin 10px auto 0
      width 552px
      flex-direction: row
      flex-wrap: wrap
      gap: 6px
    +above($breakpoints.md)
      margin 15px auto 0
      width 676px
      gap: 8px
    +above($breakpoints.xxl)
      margin 18px auto 0
      width 854px
      gap: 10px
    input,
    button
      width 280px !important
      +above($breakpoints.sm)
        width 180px !important
      +above($breakpoints.md)
        width 220px !important
      +above($breakpoints.xxl)
        width 278px !important

  &__agree-wrapper
    display: flex
    align-items: center
    justify-content center
    margin-top 10px

  &__img
    width 280px
    height: auto
    margin: -15px auto 0;
    +above($breakpoints.sm)
      margin 0
      position: absolute
      z-index -1
      width: 382px;
      bottom: 317px;
      left: -32px;
    +above($breakpoints.md)
      width: 480px;
      bottom: 405px;
      left: -35px;
    +above($breakpoints.xxl)
      width 596px
      bottom: 510px
      left: -55px
