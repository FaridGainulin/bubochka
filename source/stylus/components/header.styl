.header
  &__container
    display: flex
    justify-content space-between
    align-items: center
    padding 15px 0
    +above($breakpoints.sm)
      padding 20px 0
    +above($breakpoints.md)
      padding 25px 0
    +above($breakpoints.xxl)
      padding 34px 0

  &__brand
    display: none
    +above($breakpoints.sm)
      flex-basis: 35%
      display: flex
      flex-direction: column
      gap: 5px

  &__logo
    width 85px
    height: auto
    +above($breakpoints.sm)
      width 140px
    +above($breakpoints.md)
      width 180px
    +above($breakpoints.xxl)
      width 204px

  &__btn-wrapper
    +above($breakpoints.sm)
      display: flex
      justify-content flex-end
      flex-basis: 35%

  &__brand-mobile
    position relative
    z-index 1
    text-align: center
    color: #fff
    padding 8px 0
    margin-bottom 15px
    +above($breakpoints.sm)
      display: none
    &:after
      content: ""
      position: absolute
      z-index -1
      background-color $color-pink
      width 100vw
      height: 100%
      top: 0
      left: 50%
      transform: translateX(-50%)
