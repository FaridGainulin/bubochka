.header
  &__container
    display: flex
    justify-content space-between
    align-items: center
    padding 15px 0
    +above($breakpoints.sm)
      padding 20px 0
    +above($breakpoints.md)
      padding 25px 0
    +above($breakpoints.xxl)
      padding 34px 0

  &__brand
    display: none
    +above($breakpoints.sm)
      flex-basis: 40%
      display: flex
      flex-direction: column
      gap: 5px

  &__logo
    width 85px
    height: auto
    +above($breakpoints.sm)
      width 140px
    +above($breakpoints.md)
      width 180px
    +above($breakpoints.xxl)
      width 204px

  &__connection
    display: flex
    align-items: center
    justify-content flex-end
    gap: 6px
    +above($breakpoints.sm)
      flex-basis: 40%
      gap: 8px;
    +above($breakpoints.md)
      gap: 9px;
    +above($breakpoints.xxl)
      gap: 10px

  &__connection-icon
    display: none
    +above($breakpoints.sm)
      display: block
      width 12px
      height: 12px
    +above($breakpoints.md)
      width 13px
      height: 13px
    +above($breakpoints.xxl)
      width 14px
      height: 14px

